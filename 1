  while (!odoslatClicked && skipSubmit) {
    await wait(500); // —á–µ–∫–∞—Ç–∏, –ø–æ–∫–∏ –∞–±–æ AI –Ω–µ –ø–æ–º–∏–ª–∏—Ç—å—Å—è, –∞–±–æ —Ç–∏ –Ω–µ –Ω–∞—Ç–∏—Å–Ω–µ—à –∫–Ω–æ–ø–∫—É
  }
}


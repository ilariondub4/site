    if (!clipboard.trim()) {
      console.warn('üïí –ß–µ—Ä–µ–∑ 30 —Å–µ–∫ –±—É—Ñ–µ—Ä –æ–±–º—ñ–Ω—É –ø–æ—Ä–æ–∂–Ω—ñ–π. –ü–µ—Ä–µ–∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è...');

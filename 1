    await wait(weightedRandomDelay(800, 1500));
  // üîò –ù–∞—Ç–∏—Å–∫–∞–Ω–Ω—è loadSecondFormButton –æ–¥—Ä–∞–∑—É –Ω–∞ —Å—Ç–∞—Ä—Ç—ñ
const btn = await waitForElement('langSK');

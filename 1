    // 3Ô∏è‚É£ –ß–µ–∫–∞—î–º–æ —Å–µ–ª–µ–∫—Ç –º—ñ—Å—Ç
    const triggerStep2Button = await waitForElement('f1-life-situation-select2');
    if (!triggerStep2Button) {
